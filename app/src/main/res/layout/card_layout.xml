<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:id="@+id/trash_btn"
            android:background="@drawable/trasgbtn2"
            android:layout_height="30dp"
            />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardCategory"
        android:layout_gravity="center"
        android:text="תחום:"
        android:textSize="@dimen/text_size"
        android:textColor="@color/mainSKY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardpart"
        android:text="תפקיד:"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/mainSKY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardExper"
        android:text="ניסיון:"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/mainSKY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardHours"
        android:layout_gravity="center"
        android:text="שעות עבודה:"
        android:textSize="@dimen/text_size"
        android:textColor="@color/mainSKY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardDate"
        android:text="תאריך ושעה"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center"
        android:textColor="@color/mainSKY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardAddress"
            android:text="מיקום מדויק:"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size"
            android:textColor="@color/mainSKY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardContact"
            android:text="איש קשר:"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size"
            android:textColor="@color/mainSKY" />


    </LinearLayout>
    </RelativeLayout>



</android.support.v7.widget.CardView>
